<h1>Menus</h1>

<div id="menus">
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th>
					Name
				</th>
				<th>
					Description
				</th>
				<th>
					Price
				</th>
			</tr>	
		</thead>
		<% @menus.each do |menu| %>
    <%= render menu %>
  <% end %>
	</table>

</div>

<% if current_user && current_user.admin? %>		
<%= link_to "New menu", new_menu_path, class:"btn btn-primary" %>
<% end %>